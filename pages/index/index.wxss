/* pages/index/index.wxss */
.page{
  width: 100%;
  height:100vh;
background: #4CA5A3;

}
/* 开关 */
.img{
  height: 800rpx;
display: flex;
justify-content: center;
align-items: center;
}
.img image{
  width: 300rpx;
  height: 300rpx;
}
/* 功率 电量 */
.electric{
  display: flex;
}
.electric>view{
flex: 1;
display: flex;
flex-direction: column;
align-items: center;
font-size: 40rpx;
color: #fff;
}
/* 脚 */
.fonter{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 150rpx;
  display: flex;
  color: #fff;
  justify-content: space-around;
}
.fonter>view{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.fonter image{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}